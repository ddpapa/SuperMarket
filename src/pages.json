{
	"easycom": {
		// 注意一定要放在custom里，否则无效，https://ask.dcloud.net.cn/question/131175
		"custom": {
			"^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/tabbar/home/index",
			"style": {
				"navigationStyle": "custom",
				"app-plus": {
					"bounce": "none"
				}
			}
		},
		{
			"path": "pages/tabbar/category/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/tabbar/mall/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/tabbar/cart/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/tabbar/mine/index",
			"style": {
				"navigationStyle": "custom"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#ff0303",
		"borderStyle": "white",
		"backgroundColor": "#ffffff",
		"midButton": {
			"height": "50",
			"iconPath": "static/image/tabbar/1/mall.png",
			"iconWidth": "40"
		},
		"list": [{
			"pagePath": "pages/tabbar/home/index",
			"iconPath": "static/image/tabbar/0/home.png",
			"selectedIconPath": "static/image/tabbar/1/home.png",
			"text": "首页"
		}, {
			"pagePath": "pages/tabbar/category/index",
			"iconPath": "static/image/tabbar/0/category.png",
			"selectedIconPath": "static/image/tabbar/1/category.png",
			"text": "分类"
		}, {
			"pagePath": "pages/tabbar/cart/index",
			"iconPath": "static/image/tabbar/0/cart.png",
			"selectedIconPath": "static/image/tabbar/1/cart.png",
			"text": "购物车"
		}, {
			"pagePath": "pages/tabbar/mine/index",
			"iconPath": "static/image/tabbar/0/mine.png",
			"selectedIconPath": "static/image/tabbar/1/mine.png",
			"text": "我的"
		}]
	}
}